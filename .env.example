# Modbus RTU Sniffer Konfiguration - Beispiel
# Kopiere diese Datei nach .env und passe die Werte an

# Serielle Schnittstelle
SERIAL_PORT=/dev/ttyUSB0
BAUDRATE=9600
TIMEOUT=0.1

# MQTT Konfiguration
MQTT_BROKER=192.168.1.100
MQTT_PORT=1883
MQTT_TOPIC=smartmeter/data
MQTT_USERNAME=user
MQTT_PASSWORD=password
MQTT_PUBLISH_INTERVAL=10

# Debug-Modus (true/false)
DEBUG_MODE=false
